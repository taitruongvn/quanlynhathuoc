@using Test.Models
@using PagedList.Mvc
@model PagedList.PagedList<HANGHOA>
@{
    ViewBag.Title = "Nhà Thuốc G12";
    Layout = null;
}
<hr />
<h5>SẢN PHẨM LIÊN QUAN</h5>
<hr />
<div class="table-responsive">
    <table align="center">
        <tr>
            @foreach (var hanghoa in Model)
            {
                <td>
                    <a href="@Url.Action("Details", "NhaThuoc", new { id = @hanghoa.MAHANGHOA, nh = @hanghoa.MANHOMHANG })">
                        <img alt="@hanghoa.TENHANGHOA" src="~/images/@hanghoa.ANHHANGHOA" width="180" height="180" />
                    </a>
                    <a href="@Url.Action("Details", "NhaThuoc", new { id = @hanghoa.MAHANGHOA, nh = @hanghoa.MANHOMHANG })">
                        <h4 style="text-align:center">@hanghoa.TENHANGHOA</h4>
                    </a>
                </td>
            }
        </tr>
    </table>
</div>


