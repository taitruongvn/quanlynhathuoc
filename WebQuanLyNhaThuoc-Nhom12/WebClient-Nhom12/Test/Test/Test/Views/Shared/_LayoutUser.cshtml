<!DOCTYPE html>

<html>
<head>
    <title>Nhà thuốc G12</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!-- HEADER -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- LOGO -->
                <a class="navbar-brand">NHÀ THUỐC G12</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    @Html.Action("MenuLoginPartial", "NhaThuoc")
                </ul>
            </div>
        </div>
    </nav>

    <!-- BODY -->
    <div class="container-fluid text-center">
        <div class="row content">

            <!-- LEFT -->
            <div class="col-sm-2">
                <!-- Nhóm hàng hóa -->
                @Html.Action("Nhomhang", "NhaThuoc")
                <!-- Nhà cung cấp -->
                @Html.Action("Nhacungcap", "NhaThuoc")
            </div>

            <!-- CENTER -->
            <div class="col-sm-10 text-left">

                <!-- TOP Carousel -->
                <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-center" src="~/images/sach1.png" alt="Adv1">
                        </div>

                        <div class="item">
                            <img class="img-center" src="~/images/sach2.png" alt="Adv2">
                        </div>

                        <div class="item">
                            <img class="img-center" src="~/images/sach3.png" alt="Adv3">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>

                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <!-- END Carousel -->
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- FOOTER -->
    <footer>
        <table align="center" style="text-align: left; color: #ffffff" cellspacing="0" cellpadding="20">
            <tr>
                <td rowspan="2" width="240">
                    <p>NHÀ THUỐC G12</p>
                    <p><b>CÔNG TY DƯỢC PM1401</b></p>
                </td>
                <td width="240"><p><img alt="phone" src="~/images/phone.png" width="20" height="20" />  0949469675</p></td>
                <td width="300">
                    <p><b>TRỤ SỞ HỒ CHÍ MINH</b></p>
                    <p>155 Sư Vạn Hạnh(nd), P.12, Q.10, Tp.HCM</p>
                </td>
            </tr>
            <tr>
                <td width="240"><p><img alt="phone" src="~/images/facebook.png" width="20" height="20" />  facebook.com/nhathuocg12<p></td">
                <td width="300">
                    <p><b>CHI NHÁNH HÀ NỘI</b></p>
                    <p>Somewhere in Hanoi</p>
                </td>
            </tr>
        </table>
    </footer>
</body>
</html>
